whenever sqlerror exit failure
spool {{ log_file }} append
set linesize 160
set echo on
create restore point "{{ grp_name }}" GUARANTEE FLASHBACK DATABASE;
set echo off
prompt ----------------------------------------;
prompt  Available Restore Points for {{ db_name }};
prompt ----------------------------------------;
col name format a36
col database_incarnation# format 99999999999 head INCARNATION
col scn  format 999999999999999
col time format a31
select name, database_incarnation#, scn, time, GUARANTEE_FLASHBACK_DATABASE from v$restore_point;
spool off;
exit;

